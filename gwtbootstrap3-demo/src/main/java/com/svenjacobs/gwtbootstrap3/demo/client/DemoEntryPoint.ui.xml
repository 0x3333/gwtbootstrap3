<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.svenjacobs.gwtbootstrap3.client.ui"
             xmlns:components="urn:import:com.svenjacobs.gwtbootstrap3.demo.client.demos.components"
        >

    <ui:style>
        .buttons button {
            margin: 0.5em;
        }

        .labels span {
            margin-right: 5px;
        }
    </ui:style>

    <b:Container>

        <b:Navbar position="FIXED_TOP">
            <b:Container>
                <b:NavbarHeader>
                    <b:NavbarBrand ui:field="brand">GwtBootstrap3</b:NavbarBrand>
                    <b:NavbarCollapseButton target="#navbar-collapse"/>
                </b:NavbarHeader>
                <b:NavbarCollapse b:id="navbar-collapse">
                    <b:NavbarNav>
                        <b:ListDropDown>
                            <b:AnchorButton toggle="DROPDOWN">CSS</b:AnchorButton>
                            <b:DropDownMenu>
                                <b:ListItem ui:field="gridSystemLink">Grid System</b:ListItem>
                                <b:ListItem ui:field="typographyLink">Typography</b:ListItem>
                                <b:ListItem ui:field="codeLink">Code</b:ListItem>
                                <b:ListItem ui:field="tablesLink">Tables</b:ListItem>
                                <b:ListItem ui:field="formsLink">Forms</b:ListItem>
                                <b:ListItem ui:field="buttonsLink">Buttons</b:ListItem>
                                <b:ListItem ui:field="imagesLink">Images</b:ListItem>
                                <b:ListItem ui:field="responsiveUtilitiesLink">Responsive Utilities</b:ListItem>
                            </b:DropDownMenu>
                        </b:ListDropDown>
                        <b:ListItem ui:field="componentsLink">Components</b:ListItem>
                        <b:ListItem ui:field="javaScriptLink">JavaScript</b:ListItem>
                    </b:NavbarNav>
                </b:NavbarCollapse>
            </b:Container>
        </b:Navbar>

        <!-- Container Content -->
        <b:Row ui:field="container" width="100%">
            <components:ProgressBars/>


        </b:Row>

    </b:Container>

</ui:UiBinder>